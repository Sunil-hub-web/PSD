<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2D5EC"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_bankdetails">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/signup"
                android:fontFamily="@font/sans_bold"
                android:text="You Bank Details Not Exits please Inset Your Bank Details"
                android:textColor="@color/appcolor3"
                android:textSize="@dimen/edittextsize"
                android:layout_margin="@dimen/five"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_AddBankAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:fontFamily="@font/sans_bold"
                android:padding="@dimen/twelve"
                android:text="Add Bank Account"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="@color/appcolor3"
                app:cornerRadius="@dimen/ten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_insertbankdetails"
            android:visibility="visible">


            <EditText
                android:id="@+id/userFullName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:fontFamily="@font/sans_regular"
                android:inputType="text"
                android:padding="@dimen/ten"
                android:hint="Cardholder Name"
                android:textSize="@dimen/edittextsize"
                android:background="@drawable/layoutback"
                android:layout_margin="@dimen/five"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/ten"/>

            <EditText
                android:id="@+id/bankName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:fontFamily="@font/sans_regular"
                android:inputType="textEmailAddress"
                android:padding="@dimen/ten"
                android:hint="Bank Name"
                android:textSize="@dimen/edittextsize"
                android:background="@drawable/layoutback"
                android:layout_margin="@dimen/five"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/ten"/>

            <EditText
                android:id="@+id/bankAccountNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:fontFamily="@font/sans_regular"
                android:inputType="number"
                android:padding="@dimen/ten"
                android:textSize="@dimen/edittextsize"
                android:hint="Bank Account No"
                android:background="@drawable/layoutback"
                android:layout_margin="@dimen/five"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/ten"/>

            <EditText
                android:id="@+id/iFCSCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:fontFamily="@font/sans_regular"
                android:inputType="textEmailAddress"
                android:padding="@dimen/ten"
                android:hint="IFCS Code"
                android:textSize="@dimen/edittextsize"
                android:background="@drawable/layoutback"
                android:layout_margin="@dimen/five"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/ten"/>

<!--            <EditText-->
<!--                android:id="@+id/edit_MobileNo"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/fifty"-->
<!--                android:fontFamily="@font/sans_regular"-->
<!--                android:inputType="number"-->
<!--                android:maxLength="10"-->
<!--                android:padding="@dimen/ten"-->
<!--                android:hint="Mobile No"-->
<!--                android:textSize="@dimen/edittextsize"-->
<!--                android:background="@drawable/layoutback"-->
<!--                android:layout_margin="@dimen/five"-->
<!--                android:textColor="@color/black"-->
<!--                android:drawablePadding="@dimen/ten"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:id="@+id/lin_uploadbankdetails"
                android:visibility="gone">

                <EditText
                    android:id="@+id/edit_ShowImagePtah"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="@dimen/fifty"
                    android:fontFamily="@font/sans_regular"
                    android:inputType="text"
                    android:padding="@dimen/ten"
                    android:enabled="false"
                    android:textSize="@dimen/edittextsize"
                    android:background="@drawable/layoutback"
                    android:layout_margin="@dimen/five"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/ten"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:fontFamily="@font/sans_bold"
                    android:padding="@dimen/twelve"
                    android:text="Upload"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/appcolor3"
                    app:cornerRadius="@dimen/ten" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showbankImage">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/signup"
                android:fontFamily="@font/sans_bold"
                android:text="* Cardholder name (5-30 characters)."
                android:textColor="@color/appcolor3"
                android:textSize="@dimen/textsize"
                android:layout_margin="@dimen/five"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/signup"
                android:fontFamily="@font/sans_bold"
                android:text="* Ifsc is 11 characters and the fifth digit is the number 0."
                android:textColor="@color/appcolor3"
                android:textSize="@dimen/textsize"
                android:layout_margin="@dimen/five"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_editupload"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:fontFamily="@font/sans_bold"
                    android:padding="@dimen/twelve"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/appcolor3"
                    app:cornerRadius="@dimen/ten" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>