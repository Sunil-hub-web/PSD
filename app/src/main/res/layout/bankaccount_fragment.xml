<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2D5EC"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_UserFullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:fontFamily="@font/sans_regular"
            android:inputType="text"
            android:padding="@dimen/ten"
            android:hint="Cardholder Name"
            android:textSize="@dimen/edittextsize"
            android:background="@drawable/layoutback"
            android:layout_margin="@dimen/five"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/ten"/>

        <EditText
            android:id="@+id/edit_MobileNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:fontFamily="@font/sans_regular"
            android:inputType="phone"
            android:padding="@dimen/ten"
            android:hint="Bank Name"
            android:textSize="@dimen/edittextsize"
            android:background="@drawable/layoutback"
            android:layout_margin="@dimen/five"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/ten"/>

        <EditText
            android:id="@+id/edit_EmailId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:fontFamily="@font/sans_regular"
            android:inputType="textEmailAddress"
            android:padding="@dimen/ten"
            android:textSize="@dimen/edittextsize"
            android:hint="Bank Account No"
            android:background="@drawable/layoutback"
            android:layout_margin="@dimen/five"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/ten"/>

        <EditText
            android:id="@+id/edit_Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:fontFamily="@font/sans_regular"
            android:inputType="textPassword"
            android:padding="@dimen/ten"
            android:hint="IFCS Code"
            android:textSize="@dimen/edittextsize"
            android:background="@drawable/layoutback"
            android:layout_margin="@dimen/five"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/ten"/>

        <EditText
            android:id="@+id/edit_PasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:fontFamily="@font/sans_regular"
            android:inputType="textPassword"
            android:padding="@dimen/ten"
            android:hint="Mobile No"
            android:textSize="@dimen/edittextsize"
            android:background="@drawable/layoutback"
            android:layout_margin="@dimen/five"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/ten"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/signup"
            android:fontFamily="@font/sans_bold"
            android:text="* Cardholder name (5-30 characters)."
            android:textColor="@color/appcolor3"
            android:textSize="@dimen/textsize"
            android:layout_margin="@dimen/five"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/signup"
            android:fontFamily="@font/sans_bold"
            android:text="* Ifsc is 11 characters and the fifth digit is the number 0."
            android:textColor="@color/appcolor3"
            android:textSize="@dimen/textsize"
            android:layout_margin="@dimen/five"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:fontFamily="@font/sans_bold"
            android:padding="@dimen/twelve"
            android:text="Save Bank"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:backgroundTint="@color/appcolor3"
            app:cornerRadius="@dimen/ten" />

    </LinearLayout>

</RelativeLayout>